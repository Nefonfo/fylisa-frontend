mixin textareaControl(control_name, name, placeholder, required, error)
    // TEXTAREA CONTROL BEGIN
    .w-full.flex.flex-col.py-2
        .form-control
            label.label
                span.label-text=name
                if required
                    span.label-text-alt(class=`${error ? 'text-error': ''}`) Required
            textarea.textarea.textarea-bordered.h-24(class=`${error ? 'textarea-error': ''}` placeholder=placeholder name=control_name)
            if error
                label.label
                    span.label-text-alt.text-error(for=control_name)=error
    // TEXTAREA CONTROL END