mixin featuresBanner(style, title_1, title_2)
    .w-full.flex.flex-col(class=locals.bgStyler(style))
        .w-full.flex.flex-wrap.px-4.my-8.justify-center
            .w-auto.flex.flex-wrap(class="flex-col flex-shrink lg:pl-10")
                h1.flex.flex-col
                    if title_1
                        span.text-5xl.font-light(class="lg:text-6.5xl "+locals.titleColorStyler(style, false))= title_1
                    if title_2
                        span.font-medium(class="text-6xl leading-none lg:text-8xl "+locals.titleColorStyler(style, true))= title_2
        .w-full.flex.flex-wrap.justify-evenly.items-center.px-6.py-10
            block