mixin card(title, text, btn_text, url, img)
    .swiper-slide.flex.justify-center
        .card
            .card__content
                .card__img
                    picture
                        source(srcset=img+'?as=webp' alt="Card Image")
                        img(src=img alt='Card Image')
                .card__info
                    .card__info__title= title
                    .card__info__text= text
                    .card__info__links
                        a.btn-fylisa(href=url)= btn_text
